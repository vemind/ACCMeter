<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        <PreferenceCategory
                android:title="Logging settings">
                <CheckBoxPreference
                        android:title="@string/log_data"
                        android:defaultValue="true"
                        android:summary="Switch logging on/off"
                        android:key="log_speed" />
        </PreferenceCategory>
        <PreferenceCategory
                android:title="Service settings">
                <CheckBoxPreference
                        android:title="@string/run_bg"
                        android:defaultValue="false"
                        android:summary="Run service when application is off"
                        android:key="run_service" />
        </PreferenceCategory>
</PreferenceScreen>